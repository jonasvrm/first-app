<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>
                            <span data-id="{{this.id}}" class="BtnDelete"><i class="fas fa-trash-alt"></i></span>&nbsp;
                            <span data-id="{{this.id}}" class="BtnEdit"><i class="fas fa-pencil-alt"></i></span>
                        </td>
                        <td></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
